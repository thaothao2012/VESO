@model QuanLyVeSo.Data.EntityFramework.PhieuThu

@{
    ViewBag.Title = "Thêm mới phiếu thu";
}

@section header{
    Thêm mới phiếu thu
}
<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin bài viết</h3>
            </div>
            <!-- /.box-header -->
            @using (Html.BeginForm("Create", "PhieuThu", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="box-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDaiLy)
                        @Html.DropDownList("TenDaiLy", (SelectList) ViewBag.MaDaiLy, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaDaiLy, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgayThu)
                        @Html.TextBoxFor(model => model.NgayThu, new { @class = "form-control"  })
                        @Html.ValidationMessageFor(model => model.NgayThu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TienThu)
                        @Html.TextBoxFor(model => model.TienThu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TienThu, "", new { @class = "text-danger" })
                    </div>
                    
                </div>
                <!--End box-body-->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }

        </div>
    </div>
</div>
