@model QuanLyVeSo.Data.EntityFramework.PhieuThu

@{
    ViewBag.Title = "Cập nhật phiếu thu";
}

@section header{
    <h1>Cập nhật phiếu thu</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/Admin/PhieuThu">Phiếu thu</a></li>
        <li class="active">Cập nhật</li>
    </ol>
}
<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin đại lý</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-body">
                    @Html.HiddenFor(model => model.MaPhieuThu)

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaDaiLy, new { @class = "control-label col-md-2" })
                        @Html.DropDownList("TenList", (SelectList)ViewBag.DanhSachMa, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaDaiLy, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgayThu, new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.NgayThu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NgayThu, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TienThu, new { @class = "control-label col-md-2" })
                        @Html.TextBoxFor(model => model.TienThu, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TienThu, "", new { @class = "text-danger" })
                    </div>
                </div>
                <!--End box body-->
                <!--Begin box footer-->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    @Html.ActionLink("Hủy", "Index", new object { }, new { @class = "btn btn-default col-md-offset-1" })
                </div>
            }
        </div>
    </div>
</div>