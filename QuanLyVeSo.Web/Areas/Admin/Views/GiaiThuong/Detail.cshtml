@model QuanLyVeSo.Data.EntityFramework.GiaiThuong

@{
    ViewBag.Title = "Thông tin giải thưởng";
}

@section header{
        <h1>Thông tin giải thưởng</h1>
        <ol class="breadcrumb">
            <li><a href="/Admin"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Admin/GiaiThuong">Giải thưởng</a></li>
            <li class="active">Chi tiết</li>
        </ol>
}

    <div class="row">
        <!-- left column -->
        <div class="col-md-6 col-md-offset-2">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Thông tin bài viết</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <div class="box-body">

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaGiaiThuong)
                        @Html.TextBoxFor(model => model.MaGiaiThuong, new { @class = "form-control", @disabled = "disabled" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenGiai)
                        @Html.TextBoxFor(model => model.TenGiai, new { @class = "form-control", @disabled = "disabled" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TienThuong)
                        @Html.TextBoxFor(model => model.TienThuong, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>

                <!-- /.box-body -->
                <div class="box-footer">
                    @Html.ActionLink("Về trang chủ", "Index", new object { }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>