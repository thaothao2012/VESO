@model QuanLyVeSo.Data.EntityFramework.DaiLy

@{
    ViewBag.Title = "Thông tin đại lý";
}

@section header{
    <h1>Thông tin đại lý</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li><a href="/Admin/DaiLy">Đại lý</a></li>
        <li class="active">Chi tiết</li>
    </ol>
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thông tin đại lý</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <div class="box-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.MaDaiLy)
                    @Html.TextBoxFor(model => model.MaDaiLy, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenDaiLy)
                    @Html.TextBoxFor(model => model.TenDaiLy, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DiaChi)
                    @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoDienThoai)
                    @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control", @disabled = "disabled" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TrangThai)
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(model => model.TrangThai, new { @disabled = "disabled" })
                            Kích hoạt
                        </label>
                    </div>
                </div>
            </div>

            <!-- /.box-body -->
            <div class="box-footer">
                @Html.ActionLink("Về trang chủ", "Index", new object { }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>